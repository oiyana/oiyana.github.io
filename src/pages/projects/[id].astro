---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import ProjectPreview from '../../components/ProjectPreview.astro';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { sortItemsByDateDesc } from '../../utils/data-utils';

export async function getStaticPaths() {
    const projects = (await getCollection('projects')).sort(sortItemsByDateDesc);
    const featuredProjects = projects.filter(({ data }) => data.isFeatured);

    return projects.map((project) => {
        const featuredIndex = featuredProjects.findIndex((p) => p.id === project.id);

        // If the project is not featured, hide navigation to/from it.
        if (featuredIndex === -1) {
            return {
                params: { id: project.id },
                props: {
                    project,
                    prevProject: null,
                    nextProject: null
                }
            };
        }

        const projectCount = featuredProjects.length;

        return {
            params: { id: project.id },
            props: {
                project,
                prevProject: featuredIndex + 1 !== projectCount ? featuredProjects[featuredIndex + 1] : null,
                nextProject: featuredIndex !== 0 ? featuredProjects[featuredIndex - 1] : null
            }
        };
    });
}

type Props = {
    project: CollectionEntry<'projects'>;
    prevProject: CollectionEntry<'projects'>;
    nextProject: CollectionEntry<'projects'>;
};

const { project, prevProject, nextProject } = Astro.props;
const { title, description, seo } = project.data;
const { Content } = await render(project);
---

<BaseLayout title={seo?.title ?? title} description={seo?.description ?? description} image={seo?.image} pageType="article" showHeader={false}>
    <article class="mb-16 sm:mb-24">
        <header class="mb-8">
            <h1 class="font-serif text-3xl leading-tight font-medium sm:text-5xl sm:leading-tight">{title}</h1>
        </header>
        <div class="prose sm:prose-lg max-w-none">
            <Content />
        </div>
    </article>
    {
        (prevProject || nextProject) && (
            <div class="my-16 sm:my-24">
                <h2 class="mb-12 font-serif text-xl italic sm:mb-16 sm:text-2xl">View Next</h2>
                {nextProject && <ProjectPreview project={nextProject} class="mb-10 sm:mb-12" headingLevel="h3" />}
                {prevProject && <ProjectPreview project={prevProject} class="mb-10 sm:mb-12" headingLevel="h3" />}
            </div>
        )
    }
</BaseLayout>
