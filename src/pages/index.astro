---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout>
  <section class="hero">
    <div class="container">
      <h1>
        Product builder&nbsp;&amp;&nbsp;leader<br />
        with a design foundation.
      </h1>

      <p class="intro">
        I build interconnected systems and products that put users first.
        Currently <strong>Product Director at The New York Times Games</strong>&thinsp;—
        leading Wordle, Connections, Spelling Bee, and Crosswords.
      </p>

      <p class="intro">
        Previously at <a href="https://medium.com" target="_blank" rel="noopener">Medium</a>,
        building products that empower writers, and at
        <a href="https://buzzfeed.com" target="_blank" rel="noopener">BuzzFeed</a>,
        leading games, analytics, and ML-powered content distribution.
      </p>

      <div class="cta-row">
        <a href="/work" class="cta">View work &rarr;</a>
      </div>
    </div>
  </section>

  <section class="selected">
    <div class="container">
      <h2>Selected work</h2>
      <div class="project-grid">
        <a href="/work/buzzfeed-mini-games" class="project-card">
          <div class="project-thumb placeholder" aria-hidden="true"></div>
          <div class="project-meta">
            <span class="project-title">BuzzFeed Mini Games</span>
            <span class="project-tag">Product &middot; 60 games over 18 months</span>
          </div>
        </a>
        <a href="/work/nyt-games" class="project-card">
          <div class="project-thumb placeholder" aria-hidden="true"></div>
          <div class="project-meta">
            <span class="project-title">NYT Games</span>
            <span class="project-tag">Product Direction &middot; Wordle, Connections, Spelling Bee</span>
          </div>
        </a>
        <a href="/work/data-tool" class="project-card">
          <div class="project-thumb placeholder" aria-hidden="true"></div>
          <div class="project-meta">
            <span class="project-title">Data Tool</span>
            <span class="project-tag">Product &middot; Analytics</span>
          </div>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Offset fixed header */
  section {
    padding-top: calc(var(--header-h) + 80px);
  }

  section.selected {
    padding-top: 80px;
    padding-bottom: 120px;
  }

  /* Hero ─────────────────────────────── */
  h1 {
    font-size: clamp(2rem, 5vw, 3.3rem);
    font-weight: 400;
    line-height: 1.15;
    letter-spacing: -0.01em;
    margin-bottom: 32px;
    max-width: 640px;
  }

  .intro {
    font-family: var(--font-serif);
    font-size: 1rem;
    color: var(--text);
    max-width: 560px;
    margin-bottom: 20px;
    line-height: 1.75;
  }

  .intro a {
    border-bottom: 1px solid var(--border);
    transition: border-color 0.15s ease, opacity 0.15s ease;
  }

  .intro a:hover {
    opacity: 0.7;
    border-color: var(--text);
  }

  .cta-row {
    margin-top: 40px;
  }

  .cta {
    font-size: 0.75rem;
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border-bottom: 1px solid var(--text);
    padding-bottom: 2px;
    transition: opacity 0.15s ease;
  }

  .cta:hover {
    opacity: 0.5;
  }

  /* Selected work grid ───────────────── */
  h2 {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text-muted);
    margin-bottom: 32px;
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
    gap: 40px 32px;
  }

  .project-card {
    display: flex;
    flex-direction: column;
    gap: 14px;
    transition: opacity 0.2s ease;
  }

  .project-card:hover {
    opacity: 0.75;
  }

  .project-thumb {
    width: 100%;
    aspect-ratio: 4/3;
    background: var(--border);
    border-radius: 2px;
  }

  /* Replace .placeholder with real img once you add project images */
  .placeholder {
    background: rgba(0, 0, 0, 0.06);
  }

  .project-meta {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .project-title {
    font-size: 0.9rem;
    font-weight: 700;
  }

  .project-tag {
    font-size: 0.75rem;
    color: var(--text-muted);
  }
</style>
