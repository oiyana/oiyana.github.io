---
import BaseLayout from '../../layouts/BaseLayout.astro';

// Add your projects here — update src/img/ paths once you have screenshots
const projects = [
  {
    slug: 'buzzfeed-mini-games',
    title: 'BuzzFeed Mini Games',
    description: '60 experimental games over 18 months',
    tags: ['Product', 'Games', 'BuzzFeed'],
    img: null, // replace with: import('../../../public/work/buzzfeed-mini-games.jpg')
  },
  {
    slug: 'nyt-games',
    title: 'NYT Games',
    description: 'Wordle, Connections, Spelling Bee, Crosswords',
    tags: ['Product Direction', 'The New York Times'],
    img: null,
  },
  {
    slug: 'data-tool',
    title: 'Data Tool',
    description: 'ML-powered analytics & content distribution',
    tags: ['Product', 'Analytics', 'BuzzFeed'],
    img: null,
  },
];
---

<BaseLayout title="Work — Jacqueline Yue">
  <div class="page">
    <div class="container">
      <header class="page-header">
        <h1>Work</h1>
      </header>

      <ul class="project-list" role="list">
        {projects.map(p => (
          <li>
            <a href={`/work/${p.slug}`} class="project-row">
              <div class="thumb-wrap">
                {p.img
                  ? <img src={p.img} alt={p.title} loading="lazy" />
                  : <div class="thumb-placeholder" aria-hidden="true" />
                }
              </div>
              <div class="project-info">
                <span class="project-title">{p.title}</span>
                <span class="project-desc">{p.description}</span>
                <div class="tags">
                  {p.tags.map(t => <span class="tag">{t}</span>)}
                </div>
              </div>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</BaseLayout>

<style>
  .page {
    padding-top: calc(var(--header-h) + 64px);
    padding-bottom: 120px;
  }

  .page-header {
    margin-bottom: 48px;
  }

  h1 {
    font-size: 0.7rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .project-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .project-row {
    display: grid;
    grid-template-columns: 200px 1fr;
    gap: 32px;
    align-items: start;
    padding: 28px 0;
    border-top: 1px solid var(--border);
    transition: opacity 0.2s ease;
  }

  .project-list li:last-child .project-row {
    border-bottom: 1px solid var(--border);
  }

  .project-row:hover {
    opacity: 0.65;
  }

  .thumb-wrap {
    aspect-ratio: 4/3;
    overflow: hidden;
    border-radius: 2px;
    background: rgba(0, 0, 0, 0.06);
  }

  .thumb-wrap img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .thumb-placeholder {
    width: 100%;
    height: 100%;
  }

  .project-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding-top: 4px;
  }

  .project-title {
    font-size: 1.1rem;
    font-weight: 700;
    letter-spacing: -0.01em;
  }

  .project-desc {
    font-family: var(--font-serif);
    font-size: 0.9rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
    margin-top: 4px;
  }

  .tag {
    font-size: 0.65rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-muted);
    border: 1px solid var(--border);
    padding: 2px 8px;
    border-radius: 2px;
  }

  @media (max-width: 600px) {
    .project-row {
      grid-template-columns: 1fr;
    }
  }
</style>
